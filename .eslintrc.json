{
  "root": true,
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/eslint-config-typescript",
    "@vue/eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "no-unused-vars": "warn"
      }
    }
  ],
  "rules": {
    "vue/no-unused-vars": "warn",
    "no-unused-vars": "warn",
    "vue/valid-v-slot": "off"
  }
}